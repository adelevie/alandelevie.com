<% content_for(:title) { %><%= title %><% } %>

<article class="post">
  <header>
    <time class="left">
      <%= short_date Time.now %>
    </time>

    <h1>
      <a class="title" href="#">
        <%= h title %>
      </a>
    </h1>
  </header>

  <%= render_post_body body %>
</article>

<% content_for :foot do %>
  <script src="/js/post.js?<%= Time.now.to_i %>"></script>
  <%= footer %>
<% end %>