<ul class="posts">

  <li>
    <article class="index first">
      <%= partial "header", engine: :erb, locals: {post: posts.first} %>

      <%= post_excerpt posts.first %>

      <p>
        <a class="readon" href="<%= post_path posts.first %>">Read onâ€¦</a>
      </p>
    </article>
  </li>

  <% posts[1..-1].each do |post| %>
  <li>
    <article class="small">
      <div class="inner">
        <time class="left" datetime="<%= short_datetime post.published_at %>" pubdate>
          <%= short_date post.published_at %>
        </time>

        <h1>
          <a class="title" href="<%= post_path post %>">
            <%= h post.title %>
          </a>
        </h1>

        <span class="excerpt"><%= small_excerpt post %></span>
      </div>
    </article>
  </li>
  <% end %>
</ul>

