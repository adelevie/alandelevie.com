<ol class="posts <%= filter %>">
  <% posts.each do |post| %>
    <li class="post">
      <time class="left">
        <%= short_date post.created_at %>
      </time>

      <a href="/admin/post/<%= post.slug %>">
        <%= h post.title %>
      </a>

      <% if filter == "all" %>
        <% if post.draft? %>
          <span class="flag draft">draft</span>
        <% end %>
        
        <% if post.private? %>
          <span class="flag private">private</span>
        <% end %>

        <% if post.flagged? %>
          <span class="flag flagged">flagged</span>
        <% end %>
      <% end %>

      <% post.tags.each do |tag| %>
        <span class="flag tag"><%= tag %></span>
      <% end %>
    </li>
  <% end %>
</ol>