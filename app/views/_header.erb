<header>  
  <% if post.published_at %>
    <time class="left" datetime="<%= short_datetime post.published_at %>" pubdate>
      <%= short_date post.published_at %>
    </time>
  <% end %>

  <% if !post.visible? %>
    <small class="unpublished right">
      Unpublished, last updated <%= long_date post.updated_at %>
    </small>
  <% end %>

  <h1>
    <a class="title" href="<%= post_path post %>">
      <%= h post.title %>
    </a>
  </h1>
</header>